<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>x86-linux</id>
	<formats>
		<format>tar.gz</format>
	</formats>

	<baseDirectory>hyperic-hq-agent-${project.version}</baseDirectory>

	<componentDescriptors>
    	<componentDescriptor>../../src/main/assembly/component.xml</componentDescriptor>
    </componentDescriptors>


   <fileSets>
	<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/generated-resources/agent-x86-linux-${project.version}</directory>
			<outputDirectory>/bundles/agent-x86-linux-${project.version}</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
	</fileSets>
	
</assembly>
