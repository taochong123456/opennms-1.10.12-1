<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hyperic.hq.hqu.server.session">
  <class name="Attachment" table="EAM_UI_ATTACHMENT" lazy="false">

    <cache usage="read-write" />

    <id name="id" type="integer">
      <meta attribute="scope-set">private</meta>
      <column name="ID" not-null="true" />
      <generator class="org.hyperic.hibernate.id.ComboGenerator">
        <param name="sequence">EAM_UI_ATTACHMENT_ID_SEQ</param>
      </generator>
    </id>

    <version name="_version_" type="long">
      <column name ="VERSION_COL" default="0" />
    </version>

    <property name="attachTime">
      <column name="ATTACH_TIME" not-null="true"/>
    </property>

    <many-to-one name="view" cascade="save-update" class="View">
      <column name="VIEW_ID" not-null="true" index="UI_ATTACHMENT_VIEW_ID_IDX"/>
    </many-to-one>
    
    <joined-subclass name="AttachmentResource" table="EAM_UI_ATTACH_RSRC">
      <key on-delete="cascade" column="ATTACH_ID"/>

      <many-to-one name="resource" cascade="save-update" 
                   class="org.hyperic.hq.authz.server.session.Resource">
        <column name="RESOURCE_ID" not-null="true" index="UI_ATTACHMENT_RES_ID_IDX"/>
      </many-to-one>

      <property name="categoryEnum">
        <column name="CATEGORY" not-null="true"/>
      </property>
    </joined-subclass>
    
    <joined-subclass name="AttachmentMasthead" table="EAM_UI_ATTACH_MAST">
      <key on-delete="cascade" column="ATTACH_ID"/>

      <property name="categoryEnum">
        <column name="CATEGORY" not-null="true"/>
      </property>
    </joined-subclass>
    
    <joined-subclass name="AttachmentAdmin" table="EAM_UI_ATTACH_ADMIN">
      <key on-delete="cascade" column="ATTACH_ID"/>

      <property name="categoryEnum">
        <column name="CATEGORY" not-null="true"/>
      </property>
    </joined-subclass>

  </class>

</hibernate-mapping>
